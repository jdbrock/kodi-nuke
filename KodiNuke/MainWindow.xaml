                        <TextBlock Text="{Binding SelectedSeries.Sonarr.Title, FallbackValue=Show Name}" FontSize="24" Padding="0,0,0,10" />
                        <TextBlock Text="{Binding SelectedSeries.HumanSize, FallbackValue=0 GB}" FontSize="18" Padding="0,0,0,10" />
                    </StackPanel>-->
            <!--

