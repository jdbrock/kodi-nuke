                        <Button Content="Delete" Command="{Binding DeleteCommand}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>-->

        </TabControl>


        <Border Grid.Row="1" Background="#80FFFFFF" BorderBrush="#20000000" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding DiskSpaceReport}" FontSize="12" Margin="12,8,12,8" />
        </Border>

    </Grid>

</Controls:MetroWindow>
